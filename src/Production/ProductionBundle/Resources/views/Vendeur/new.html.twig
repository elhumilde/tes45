{% extends '::base.html.twig' %}

{% block body -%}

    <div id="page-title">
        <h2>Création Vendeurs</h2>


    </div>
    <div class="row">
        <form class="form-horizontal col-md-8 test" action="{{ path('vendeur_create') }}" method="post" {{ form_enctype(form) }}>


            <div class="form-group ">
                <div class="col-md-offset-6 col-md-6">
                    {{ form_row(form.code, { 'label': 'Code Vendeur'}) }}
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-offset-6 col-md-6">
                    {{ form_row(form.nom, { 'label': 'Nom'}) }}
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-offset-6 col-md-6">
                    {{ form_row(form.prenom, { 'label': 'Prenom'}) }}
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-offset-6 col-md-6">
                    {{ form_row(form.email, { 'label': 'Email'}) }}
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-offset-6 col-md-6">
                    {{ form_row(form.tel, { 'label': 'Télephone'}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}


            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                    <button type="submit" name="subvalider" class="btn btn-primary"><span class="fui-new"></span> Ajouter</button>
                </div>
            </div>


        </form>
    </div>
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <h3 class="title-hero">
                    Liste des Vendeurs
                </h3>
                <div class="example-box-wrapper">
                    <table id="datatable-responsive" class="table table-striped table-bordered responsive no-wrap" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Code Vendeur</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Tél</th>

                        </tr>
                        </thead>

                        <tfoot>
                        <tr>
                            <th>Code Vendeur</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Tél</th>

                        </tr>
                        </tfoot>

                        <tbody>
                        {% for entity in entities %}
                            <tr>

                                <td class="text-success">{{ entity.code }}</td>
                                <td>{{ entity.nom }}</td>
                                <td class="text-danger">{{ entity.prenom }}</td>
                                <td>{{ entity.email }}</td>
                                <td class="text-warning">{{ entity.tel }}</td>

                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script type="text/javascript" src="{{ asset('assets/widgets/datatable/datatable.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/widgets/datatable/datatable-bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/widgets/datatable/datatable-responsive.js') }}"></script>

    <script type="text/javascript">
        /* Datatables responsive */
        $(document).ready(function() {
            $('#datatable-responsive').DataTable( {
                responsive: true
            } );
        } );

        $(document).ready(function() {
            $('.dataTables_filter input').attr("placeholder", "Search...");
        });
    </script>
{% endblock %}
